<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.example.projectmanager.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projectmanager.NewProjectActivity"
            android:label="@string/new_project"
            android:parentActivityName="com.example.projectmanager.MainActivity"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projectmanager.MainActivity" />
        </activity>
        <activity
            android:name="com.example.projectmanager.ProjectActivity"
            android:label="@string/project"
            android:parentActivityName="com.example.projectmanager.MainActivity"
            android:configChanges="orientation" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projectmanager.MainActivity" />
        </activity>
        <activity
            android:name="com.example.projectmanager.NewMilestoneActivity"
            android:label="@string/new_milestone"
            android:parentActivityName="com.example.projectmanager.ProjectActivity"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projectmanager.ProjectActivity" />
        </activity>
        
    </application>

</manifest>
